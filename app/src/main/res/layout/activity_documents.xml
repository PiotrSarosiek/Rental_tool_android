<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DocumentsActivity">

    <TextView
        android:id="@+id/text_view_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Documents"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_below="@id/text_view_registration"
        android:background="@drawable/background_border_2">

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Detailed summary of your apartments will be sent to your email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/generate_summary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Generate"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </RelativeLayout>





</RelativeLayout>