<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="416dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/apartments_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:src="@drawable/group_17"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="30dp"/>
                <ImageView
                    android:id="@+id/files_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:src="@drawable/group_18"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/messages_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:src="@drawable/group_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp" />
                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:src="@drawable/group_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>
        </LinearLayout>
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_layout"
        android:layout_gravity="center_vertical"
        android:src="@drawable/group_21"
        android:paddingTop="40dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_icon"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="user_name"
        android:textColor="#244BB5"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginEnd="30dp"
            android:layout_weight=".20"
            android:paddingBottom="10dp"
            android:src="@drawable/group_7" />

        <ImageView
            android:id="@+id/exit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_weight=".20"
            android:paddingLeft="190dp"

            android:paddingBottom="10dp"
            android:src="@drawable/group_12" />

    </LinearLayout>




</RelativeLayout>