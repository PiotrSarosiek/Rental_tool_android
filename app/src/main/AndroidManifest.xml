<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rental_tool">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Rental_tool">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".PulpitActivity"/>
        <activity android:name=".ApartmentsActivity"/>
        <activity android:name=".ApartmentActivity"/>
        <activity android:name=".PulpitTenantActivity"/>
        <activity android:name=".ApartmentTenantActivity"/>
        <activity android:name=".InvitationsActivity"/>
        <activity android:name=".UserSettingsActivity"/>
    </application>

</manifest>